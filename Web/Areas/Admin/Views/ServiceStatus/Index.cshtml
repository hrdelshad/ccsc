@model IEnumerable<ccsc.DataLayer.Entities.Services.ServiceStatus>

@{
    ViewData["Title"] = "فهرست";
    
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOk)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOk)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceStatusId">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceStatusId">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceStatusId">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
