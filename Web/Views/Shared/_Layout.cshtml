
@inject SignInManager<User> SignInManager;
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CCSC</title>
	<link rel="stylesheet" href="~/css/my.css" type="text/css" />
	@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-rtl.min.css" />*@
	<link rel="stylesheet" href="~/lib/bootstrap/bootstrap-5.0.0-beta3-dist/css/bootstrap.rtl.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

	<link href="https://kendo.cdn.telerik.com/2020.2.513/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" type="text/css" />
	<link href="https://kendo.cdn.telerik.com/2020.2.513/styles/kendo.rtl.min.css" rel="stylesheet" type="text/css" />
	<script src="https://kendo.cdn.telerik.com/2020.2.513/js/jquery.min.js"></script>
	<script src="https://kendo.cdn.telerik.com/2020.2.513/js/jszip.min.js"></script>
	<script src="https://kendo.cdn.telerik.com/2020.2.513/js/kendo.all.min.js"></script>
	<script src="https://kendo.cdn.telerik.com/2020.2.513/js/kendo.aspnetmvc.min.js"></script>
	<script src="~/js/kendo.messages.fa-IR.js"></script>
</head>
<body class="k-rtl dir-right bg-light">
	<header class="pb-3">
		<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
			<div class="container-fluid">
				@if (SignInManager.IsSignedIn(User))
				{
					<form class="form-inline my-2 my-lg-0" asp-area="" asp-controller="Accounts" asp-action="Logout" method="post">
						<button class="btn btn-outline-danger my-2 my-sm-0 material-icons" type="submit">power_settings_new</button>
					</form>

					<a class="navbar-brand m-1" href="#">خوش آمدید @User.Identity.Name    | </a>
				}
				else
				{
					<a class="navbar-brand" href="#">انعکاس ناب ایده |</a>
				}

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<ul class="navbar-nav me-auto mb-2 mb-md-0">

						@if (!SignInManager.IsSignedIn(User))
						{

							@*<li class="nav-item">
						<a class="nav-link text-light" asp-area="" asp-controller="Accounts" asp-action="Register">عضویت</a>
					</li>*@
							<li class="nav-item">
								<a class="nav-link text-light material-icons" asp-area="" asp-controller="Accounts" asp-action="Login">input</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<span class="material-icons">
									<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
										home
									</a>
								</span>
								<span class="material-icons">
									<a class="nav-link text-light" asp-action="Create">
										add_circle_outline
									</a>
								</span>
								<span class="material-icons">
									<a class="nav-link text-light" title="رفرش" asp-action="Index">
										refresh
									</a>
								</span>
								<span class="material-icons">
									<a class="nav-link text-light" title="داشبورد" asp-area="" asp-controller="Home" asp-action="Dashboard">
										analytics
									</a>
								</span>
							</li>

							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Customers" asp-action="Index">مشتریان</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Servers" asp-action="Index">ریموت</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Contacts" asp-action="Index">افراد</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									خدمات
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
									<a class="dropdown-item" asp-area="" asp-controller="Requests" asp-action="Index">درخواست ها</a>
									<a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="Index">سرویس ها</a>
									<a class="dropdown-item" asp-area="" asp-controller="Duties" asp-action="Index">کارها</a>
								</div>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									قراردادها
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
									<a class="dropdown-item" asp-area="" asp-controller="Contracts" asp-action="Index">قراردادها</a>
									<a class="dropdown-item" asp-area="" asp-controller="ContractProducts" asp-action="Index">محصولات قرارداد</a>
									<a class="dropdown-item" asp-area="" asp-controller="ContractCours" asp-action="Index">رشته های قرارداد</a>
								</div>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									اطلاعات پایه
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
									<a class="dropdown-item" asp-area="" asp-controller="RequestStatus" asp-action="Index">وضعیت درخواست</a>
									<a class="dropdown-item" asp-area="" asp-controller="Os" asp-action="Index">انواع سیستم عامل</a>
									<a class="dropdown-item" asp-area="" asp-controller="CourseLevels" asp-action="Index">مقاطع تحصیلی</a>
									<a class="dropdown-item" asp-area="" asp-controller="RequestChannels" asp-action="Index">کانال درخواست</a>
									<a class="dropdown-item" asp-area="" asp-controller="RequestTypes" asp-action="Index">نوع درخواست</a>
									<a class="dropdown-item" asp-area="" asp-controller="ContractTypes" asp-action="Index">انواع قرارداد</a>
									<a class="dropdown-item" asp-area="" asp-controller="CustomerTypes" asp-action="Index">انواع مشتری</a>
									<a class="dropdown-item" asp-area="" asp-controller="ServerTypes" asp-action="Index">انوع سرور</a>
									<a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">محصولات</a>
									<a class="dropdown-item" asp-area="" asp-controller="Posts" asp-action="Index">پست ها</a>
									<a class="dropdown-item" asp-area="" asp-controller="Genders" asp-action="Index">جنسیت</a>
									<a class="dropdown-item" asp-area="" asp-controller="Salutations" asp-action="Index">القاب</a>
									<hr />
									<a class="dropdown-item" asp-area="" asp-controller="ServiceTypes" asp-action="Index">انواع سرویس</a>
									<a class="dropdown-item" asp-area="" asp-controller="ServiceStatus" asp-action="Index">وضعیت های سرویس</a>
									<a class="dropdown-item" asp-area="" asp-controller="DutyStatus" asp-action="Index">وضعیت کارها</a>
									<a class="dropdown-item" asp-area="" asp-controller="" asp-action="Index">مخاطب</a>

								</div>

							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									راهنما
								</a>
								<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
									<a class="dropdown-item" asp-area="" asp-controller="Videos" asp-action="Index">ویدیوها</a>
									<a class="dropdown-item" asp-area="" asp-controller="ChangeSets" asp-action="Index">تغییرات</a>
								</div>
							</li>
						}
					</ul>

					<form class="d-flex" asp-action="Index" method="get">
						<input class="form-control me-2" type="text" name="SearchString" placeholder="جستجو در @ViewData["Title"]" aria-label="Search">
						<button class="btn btn-outline-success" type="submit">بیاب</button>
					</form>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3 mt-5 flex-shrink-0">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container text-left">
			&copy; 2020 - CCSC - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
		</div>
	</footer>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>
