@model FilterRequestDTO
@{
	ViewData["Title"] = "درخواست‌";
}
<div class="row container">
	<div class="col-md-10">
		@if (Model.Requests.Any())
		{
			<div>
				<table class="table">
					<thead>
						<tr>
							<th>
								زمان درخواست
								@*@Html.DisplayNameFor(model => model.RequestTime)*@
							</th>
							<th>
								عنوان
								@*@Html.DisplayNameFor(model => model.Title)*@
							</th>
							<th>
								مشتری
								@*@Html.DisplayNameFor(model => model.Customer)*@
							</th>
							<th>
								کاربر
								@*@Html.DisplayNameFor(model => model.Contact)*@
							</th>
							<th>
								کانال
								@*@Html.DisplayNameFor(model => model.RequestChanel)*@
							</th>
							<th>
								نوع
								@*@Html.DisplayNameFor(model => model.RequestType)*@
							</th>
							<th>
								محصول
								@*@Html.DisplayNameFor(model => model.SubSystem)*@
							</th>
							<th>
								وضعیت
								@*@Html.DisplayNameFor(model => model.RequestStatus)*@
							</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model.Requests)
						{
							var fullName = item.Contact.Salutation.Title + " " + item.Contact.FirstName + " " + item.Contact.LastName;
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.RequestTime)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Title)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Customer.Title)
								</td>
								<td>
									@fullName
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.RequestChanel.Title)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.RequestType.Title)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.SubSystem.Title)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.RequestStatus.Title)
								</td>
								<td>
									<a asp-action="Edit" asp-route-id="@item.RequestId">ویرایش</a> |
									<a asp-action="Details" asp-route-id="@item.RequestId">جزئیات</a> |
									<a asp-action="Delete" asp-route-id="@item.RequestId">حذف</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		}
		else
		{
			<partial name="_NoItemFoundPartial" />
		}
	</div>
	<div class="col-md-2">
		فیلتر
		<hr />
		<form asp-action="Index" class="border border-success rounded p-4 shadow bg-light mb-5">
			<div class="row">
				<div class="col-md-12">
					<div class="form-check form-switch mb-3">
						<input asp-for="RequestState" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
						<label class="form-check-label" for="flexSwitchCheckChecked">فعال؟</label>
					</div>
					@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="CustomerId" class="control-label"></label>
							<select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
							<span asp-validation-for="CustomerId" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="RequestChanelId" class="control-label"></label>
							<select asp-for="RequestChanelId" class="form-control" asp-items="ViewBag.RequestChanelId"></select>
							<span asp-validation-for="RequestChanelId" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="RequestTypeId" class="control-label"></label>
							<select asp-for="RequestTypeId" class="form-control" asp-items="ViewBag.RequestTypeId"></select>
							<span asp-validation-for="RequestTypeId" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="SubSystemId" class="control-label"></label>
							<select asp-for="SubSystemId" class="form-control" asp-items="ViewBag.SubSystemId"></select>
							<span asp-validation-for="SubSystemId" class="text-danger"></span>
						</div>*@

				</div>
				<div class="col-md-12">
					<div class="form-group">
						@*<label asp-for="Title" class="control-label">عنوان</label>*@
						<input asp-for="Title" class="form-control" placeholder="عنوان درخواست" />
					</div>
				</div>
			</div>
			<div class="form-group mt-2">
				<input type="submit" value="فیلتر" class="btn btn-success" />
			</div>
		</form>

	</div>
</div>