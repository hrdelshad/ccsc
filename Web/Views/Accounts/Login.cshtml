@model ccsc.Core.DTOs.Account.LoginViewModel

@{
	ViewData["Title"] = "ورود";
	
	string returnUrl = ViewData["returnUrl"].ToString();
}

<div class="row bg-secondary">
	
	<div class="col p-5">
		<form asp-controller="Accounts" asp-action="Login" asp-route-returnUrl=@returnUrl method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row mb-3">
				<span asp-validation-for="UserName" class="text-info"></span>
				<span asp-validation-for="Password" class="text-info"></span>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text" id="basic-addon1">نام کاربری</span>
				<input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" aria-label="Username" aria-describedby="basic-addon1">
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text" id="basic-addon1">رمز عبور</span>
				<input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور" aria-label="Password" aria-describedby="basic-addon2">
			</div>
			<div class="form-check form-switch mb-3">
				<input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
				<label class="form-check-label" for="flexSwitchCheckChecked">مرا به خاطر بسپار</label>
			</div>
			@*<div class="input-group mb-3">
					<input asp-for="RememberMe" />
					<label asp-for="RememberMe"></label>
					<span asp-validation-for="RememberMe" class="text-info"></span>
				</div>*@
			<div class="form-group">
				<input type="submit" value="ورود" class="btn btn-primary" />
			</div>
		</form>
	</div>

</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}