@model ccsc.DataLayer.Entities.Services.Duty

@{
    ViewData["Title"] = "Edit";
    
}



<h4>Duty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DutyId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestId" class="control-label"></label>
                <select asp-for="RequestId" class="form-control" asp-items="ViewBag.RequestId"></select>
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DutyDate" class="control-label"></label>
                <input asp-for="DutyDate" class="form-control" />
                <span asp-validation-for="DutyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuoDate" class="control-label"></label>
                <input asp-for="DuoDate" class="form-control" />
                <span asp-validation-for="DuoDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoneDate" class="control-label"></label>
                <input asp-for="DoneDate" class="form-control" />
                <span asp-validation-for="DoneDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DutyStatusId" class="control-label"></label>
                <select asp-for="DutyStatusId" class="form-control" asp-items="ViewBag.DutyStatusId"></select>
                <span asp-validation-for="DutyStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به فهرست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
