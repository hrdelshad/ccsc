@model IEnumerable<ccsc.DataLayer.Entities.ChangeSets.ChangeSet>

@{
    ViewData["Title"] = "تغییرات";
    
}

<h3>@ViewData["Title"]</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Version)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsPublish)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Quarter)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ChangeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsPublish)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Quarter)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ChangeType.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Video.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChangeSetId">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.ChangeSetId">جزئیات</a>
            </td>
        </tr>
}
    </tbody>
</table>
