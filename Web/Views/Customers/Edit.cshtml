@model ccsc.DataLayer.Entities.Customers.Customer

@{
	ViewData["Title"] = "Edit";
	var fullName = Model.CustomerType.Title + " " + Model.Title;
}



<h5>@fullName</h5>
<hr />
<form asp-action="Edit">
	<div class="row mb-2">
		<div class="col-md-4">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="CustomerId" />
			<input type="hidden" asp-for="SmsCreditCheckDate" />
			<input type="hidden" asp-for="VersionCheckDate" />
			<div class="form-group">
				<label asp-for="CustomerTypeId" class="control-label"></label>
				<select asp-for="CustomerTypeId" class="form-control" asp-items="ViewBag.CustomerTypeId"></select>
				<span asp-validation-for="CustomerTypeId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Url" class="control-label"></label>
				<input asp-for="Url" class="form-control" />
				<span asp-validation-for="Url" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Version" class="control-label"></label>
				<input asp-for="Version" class="form-control" />
				<span asp-validation-for="Version" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SmsUser" class="control-label"></label>
				<input asp-for="SmsUser" class="form-control" />
				<span asp-validation-for="SmsUser" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SmsPass" class="control-label"></label>
				<input asp-for="SmsPass" class="form-control" />
				<span asp-validation-for="SmsPass" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SmsCredit" class="control-label"></label>
				<input asp-for="SmsCredit" class="form-control" />
				<span asp-validation-for="SmsCredit" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MinSmsCredit" class="control-label"></label>
				<input asp-for="MinSmsCredit" class="form-control" />
				<span asp-validation-for="MinSmsCredit" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsActiveSms" /> @Html.DisplayNameFor(model => model.IsActiveSms)
				</label>
			</div>
			<div class="form-group">
				<label asp-for="AfterXDay" class="control-label"></label>
				<input asp-for="AfterXDay" class="form-control" />
				<span asp-validation-for="AfterXDay" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SendSmsDate" class="control-label"></label>
				<input asp-for="SendSmsDate" class="form-control" />
				<span asp-validation-for="SendSmsDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="UniversityId" class="control-label"></label>
				<input asp-for="UniversityId" class="form-control" />
				<span asp-validation-for="UniversityId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="UniversityCode" class="control-label"></label>
				<input asp-for="UniversityCode" class="form-control" />
				<span asp-validation-for="UniversityCode" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="HasUnSupportedContract" /> @Html.DisplayNameFor(model => model.HasUnSupportedContract)
				</label>
			</div>
			<div class="form-group">
				<label asp-for="CustomerStatusId" class="control-label"></label>
				<select asp-for="CustomerStatusId" class="form-control" asp-items="ViewBag.CustomerStatusId"></select>
				<span asp-validation-for="CustomerStatusId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" ckeditor="1" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
		</div>
		
	</div>
	<div class="form-group">
	<input type="submit" value="ذخیره" class="btn btn-primary" />
</div>
</form>

<div>
	<a asp-action="Index">بازگشت به فهرست</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
