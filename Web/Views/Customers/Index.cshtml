@model IEnumerable<ccsc.DataLayer.Entities.Customers.Customer>

@{
    ViewData["Title"] = "فهرست مشتریان";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create">مشتری جدید</a>
</p>
<form asp-controller="Customers" asp-action="Index" method="get">
	<p>
		<input type="text" name="SearchString">
		<input type="submit" value="بیاب" />
	</p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VersionCheckDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMSUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMSPass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMSCredit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinSMSCredit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SMSCreditCheckDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActiveSms)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.CustomerType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
	        <td>
				<a asp-action="Details" asp-route-id="@item.CustomerId">@Html.DisplayFor(modelItem => item.Title)</a>
	        </td>
	        <td>
				<a href="@Html.DisplayFor(modelItem => item.Url)">@Html.DisplayFor(modelItem => item.Url)</a>
	        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VersionCheckDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SMSUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SMSPass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SMSCredit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSMSCredit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SMSCreditCheckDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActiveSms)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.CustomerType.Title)
            </td>
            <td>
	            <a asp-action="Delete" asp-route-id="@item.CustomerId">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
